
@{

    ViewData["Title"] = "Film Search";

}

<section class="noflex">
    <form asp-action="Search" method="get">
        <h1>Search</h1>
        <div>

            <label for="SearchString">Search by Title: </label> <input type="text" name="SearchString" id="SearchString" />

            <input type="submit" value="Filter" />

        </div>
    </form>

    <div>

        @if (ViewData["SearchString"] != null && (string)ViewData["SearchString"] != String.Empty)

        {

            @foreach (var item in Model)

            {
                <div class="filmThumb">
                    <div><a asp-controller="Home" asp-action="FilmDetails" asp-route-id="@item.FilmID"><img src="~/images/@item.FilmImage" /></a></div>
                    <h3>@item.FilmTitle</h3>
                    
                </div>
                //<p><a asp-controller="Home" asp-action="FilmDetails" asp-route-id="@item.FilmID">@item.FilmTitle</a></p>

            }


            if (Model.Count == 0)


            {

                <p>Sorry no matches.</p>

            }

        }

    </div>

</section>

